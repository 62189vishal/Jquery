$(document).ready(function() {

  //for hidding the p tag
	$("p").hide();
	$("h1").click(function(){
		$(this).next().slideToggle(300);
		
		/*this will tell the user that the tag coming after 
		"h1" tag is getting toggled*/
	
	});

	 

});


</script>


